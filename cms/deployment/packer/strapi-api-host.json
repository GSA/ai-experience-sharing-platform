{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "us-east-1",
    "aws_subnet_id": "subnet-0475e0dd813571411",
    "aws_security_group_id": "sg-008d405121538277d",
    "aws_instance_type": "t3.small"
  },
  "provisioners": [
    {
      "type": "file",
      "source": "build/strapi-api-host-build.tar.gz",
      "destination": "/tmp/strapi-api-host-build.tar.gz"
    },
    {
      "type": "shell",
      "inline": ["sudo apt-get update -q && sudo apt-get dist-upgrade -q -y && sudo apt-get install -q -y ansible"]
    },
    {
      "type": "ansible-local",
      "playbook_file": "./deployment/ansible/strapi-api-host.yaml"
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "subnet_id": "{{user `aws_subnet_id`}}",
      "security_group_id": "{{user `aws_security_group_id`}}",
      "instance_type": "{{user `aws_instance_type`}}",
      "ssh_username": "ubuntu",
      "ami_name": "strapi-api-host-{{timestamp}}",
      "tags": {
        "Env": "dev"
      }
    }
  ]
}
